<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="32.0">
	<HBox styleClass="content-header">
		<Label text="RadioButton" styleClass="fluent, title"/>
	</HBox>

	<ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
		<VBox spacing="32.0" styleClass="examples-page">
			<Label text="Use RadioButtons to let a user choose between mutually exclusive, related options." wrapText="true"/>

			<VBox spacing="12.0">
				<Label text="A group of RadioButton controls." styleClass="fluent, body-strong"/>

				<VBox styleClass="example">
					<fx:define>
						<ToggleGroup fx:id="toggleGroup"/>
					</fx:define>

					<VBox styleClass="example-header" spacing="16.0">
						<RadioButton toggleGroup="$toggleGroup" text="Option 1"/>
						<RadioButton toggleGroup="$toggleGroup" text="Option 2"/>
						<RadioButton toggleGroup="$toggleGroup" text="Option 3"/>
					</VBox>

					<TitledPane expanded="false" styleClass="example-footer" text="Source code">
						<TextArea text="%radiobutton.sample1" editable="false" styleClass="code-sample"/>
					</TitledPane>
				</VBox>
			</VBox>
		</VBox>
	</ScrollPane>
</fx:root>
