<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="32.0">
	<HBox styleClass="content-header">
		<Label text="MenuButton" styleClass="fluent, title"/>
	</HBox>

	<ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
		<VBox spacing="32.0" style="-fx-padding: 16 16 16 36;">
			<Label text="A control that drops down a flyout of choices from which one can be chosen." wrapText="true"/>

			<VBox spacing="12.0">
				<Label text="Simple MenuButton." styleClass="fluent, body-strong"/>

				<VBox styleClass="example">
					<HBox styleClass="example-header" spacing="8.0">
						<MenuButton text="Email">
							<items>
								<MenuItem text="Send"/>
								<MenuItem text="Reply"/>
								<MenuItem text="Reply all"/>
							</items>
						</MenuButton>
						<MenuButton text="Email" disable="true"/>
					</HBox>

					<TitledPane expanded="false" styleClass="example-footer" text="Source code">
						<TextArea text="%menubutton.sample1" editable="false" styleClass="code-sample"/>
					</TitledPane>
				</VBox>
			</VBox>

			<!-- TODO MenuButton with icons -->
		</VBox>
	</ScrollPane>
</fx:root>
